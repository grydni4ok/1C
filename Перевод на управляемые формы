ЭтоНовый() 		= Не ЗначениеЗаполнено(Объект.Ссылка) / Не Параметры.Ключ.Пустая()
ЭлементыФормы 	= Элементы, но не всегда	
ЭтаФорма = ЭтотОбъект, но предпочтительнее использовать ЭтотОбъект

//Для вызова процедур и функций модуля объекта
ДокументОбъект = РеквизитФормыВЗначение("Объект");
ДокументОбъект.ПрименитьСкидку(5);

ЗначениеВРеквизитФормы(ДокументОбъект, "Объект");



Вызов формы методом ОткрытьФорму регистра сведений (ВЫЗЫВАЕТСЯ НА КЛИЕНТЕ)
	ПередаваемыеПараметры = Новый Структура; //формируем структуру период + поля измерений
	ПередаваемыеПараметры.Вставить("Период", ТекущаяДата());
	ПередаваемыеПараметры.Вставить("ФизЛицо", Объект.Ссылка);
	
	ПараметрыМассив = Новый Массив;
	ПараметрыМассив.Добавить(ПередаваемыеПараметры); // помещаем структуру в массив
	КлючЗаписиРегистра = Новый("РегистрСведенийКлючЗаписи.ПаспортныеДанныеФизЛиц", ПараметрыМассив); //с помощью массива со структурой создаем ключ записи
	ОткрытьФорму("РегистрСведений.ПаспортныеДанныеФизЛиц.ФормаЗаписи", Новый Структура("Ключ", КлючЗаписиРегистра)); // передаем в форму ключ записи и открываем её

Вызов формы справочников и прочих элементов
	П = Новый Структура;
    П.Вставить("Ключ", Руководитель); //ключ - ссылка на объект, если ключ пустой возовется форма создания нового объекта

   ОткрытьФорму("Справочник.ФизическиеЛица.Форма.ФормаЭлементаУП", П, ЭтотОбъект);
   
   
Можно просто открыть форму передав в нее параметры, они будут доступны, при ПриСозданииНаСервере
	ПередаваемыеПараметры = Новый Структура; //формируем структуру период + поля измерений
	ПередаваемыеПараметры.Вставить("Объект", Объект.Ссылка);
	ПередаваемыеПараметры.Вставить("Сотрудник", Элемент.ТекущиеДанные.Ссылка);
		
	ОткрытьФорму("РегистрСведений.ПраваПодписи.Форма.ФормаУстановкиПраваПодписиУП", ПередаваемыеПараметры, , , , , ОповещениеОЗакрытии); // передаем в форму параметры, они будут доступны, при ПриСозданииНаСервере 
	




Обработка результата закрытия вызванной формы
	//ОбновитьИнформациюКонтактныеЛица - функция нужная нам для вызова после закрытия формы
	ОповещениеОЗакрытии = Новый ОписаниеОповещения ("ОбновитьИнформациюКонтактныеЛица", ЭтотОбъект);
	
	ПараметрыОткрытия = Новый Структура;
	ПараметрыОткрытия.Вставить("Ключ", ""); 		
	ОткрытьФорму("Справочник.ФизическиеЛица.Форма.ФормаЭлементаУП", ПараметрыОткрытия, Элемент, , , , ОповещениеОЗакрытии);
	
	

РежимДиалога Да Нет
	Оповещение = Новый ОписаниеОповещения("ОчищениеПоля", ЭтотОбъект, ПараметрыОчистки); // Прописываем название процедуры-обработчика.
		
	ПоказатьВопрос(Оповещение, "Вы действительно очистить поле """ + Элемент.Заголовок + """?",  // вместо привычного "Вопрос", теперь "ПоказатьВопрос"
	РежимДиалогаВопрос.ДаНет,	
	0,  // задержка (секунды). необязательно	
	КодВозвратаДиалога.Нет, // задает кнопку по умолчанию. необязательно	
	"Очистка поля" // устанавливаем заголовок. необязательно	
	);
	
Процедура ОчищениеПоля(Результат, Параметры) Экспорт
	
	Если Результат = КодВозвратаДиалога.Да Тогда
		//какой-то функционал
	КонецЕсли;	

КонецПроцедуры



	
Заполение ТЗ из запроса (на сервере)

Процедура ЗаполнитьПраваНаСервере(Сотрудник)
	Документ = РеквизитФормыВЗначение("Объект");

	Запрос  = Новый Запрос;
	Запрос.Текст =
	"ВЫБРАТЬ
	|	Результат.ПравоПодписи КАК ПравоПодписи,
	|	//Какой-то запрос
	
	Запрос.УстановитьПараметр("ДатаСреза", ТекущаяДата());
	Запрос.УстановитьПараметр("Сотрудник", Сотрудник);
	
	ПраваПодписиТЗ = Запрос.Выполнить().Выгрузить();
	
	ЭтаФорма.ПравоПодписи.Очистить();
	ЭтаФорма.ПравоПодписи.Загрузить(ПраваПодписиТЗ);
	
	ЗначениеВРеквизитФормы(Документ, "Объект");

КонецПроцедуры

